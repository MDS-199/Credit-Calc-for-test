@model List<CalculatorMonthsRow>

@{
    ViewData["Title"] = "Result";
}

<div class="text-center">
    <h1 class="display-4">Данные по кредиту</h1>
    <table class="table"> 
        <tr> 
            <th>Номер платежа</th>
            <th>Дата платежа</th>
            <th>Сумма платежа</th>
            <th>Основной долг</th>
            <th>Проценты</th>
            <th>Остаток долга</th>
        </tr>
        @foreach (var item in Model)
        {

        <tr>
            <td>@(item.payment_number)</td>
            <td>@(item.payment_date)</td>
            <td>@(item.monthly_payment)</td>
            <td>@(item.payment_body)</td>
            <td>@(item.payment_percent)</td>
            <td>@(item.loan_balance)</td>

            @*<td>@(item.annuity_coefficient)</td>
            <td>@(item.loan_summ)</td>
            <td>@(item.loan_rate)</td>
            <td>@(item.loan_rate_month)</td>*@

        </tr>
        }
        <tr class="table-end">
            <th colspan="3">Общая сумма выплат</th>
            <th colspan="3">Сумма переплат</th>
        </tr>
        <tr>
            <td colspan="3">@(Model[0].total_payments)</td>
            <td colspan="3">@(Model[0].total_percents)</td>
        </tr>
    </table>
</div>
